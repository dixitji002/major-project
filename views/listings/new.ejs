<% layout("/layouts/boilerplate")%>

  
<div class="row">
  <div class="col-8 offset-2">
    <h5>Create new listing</h5>
    <form method="POST"  action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label" >Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
        <div class="invalid-feedback">
          Title is not valid.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <label for="discription" class="form-label" >Discription</label>
        <textarea
        name="listing[description]"
        class="form-control"
        required
        ></textarea>
        <div class="invalid-feedback">
          Discription id too sort.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
     
      <div class="mb-3">
        <label for="image" class="form-label" >Upload image</label>
        <input
        name="listing[image]"
        class="form-control"
        placeholder="enter image URL/Link"
        type="file"
    
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4" >
          <label for="price" class="form-label" >Price</label>
          <input name="listing[price]" placeholder="enter price"  class="form-control "required/>
          <div class="invalid-feedback">
            Price is not valid.
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label" >Country</label>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required/>
          <div class="invalid-feedback">
            Country is not valid.
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label" >Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Location is not valid.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      
      
      
      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>

